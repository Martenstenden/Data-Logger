<UserControl x:Class="Data_Logger.Views.SinglePlotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Data_Logger.Views"
             xmlns:vm="clr-namespace:Data_Logger.ViewModels" xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:converters="clr-namespace:Data_Logger.Converters"
             xmlns:dataLogger="clr-namespace:Data_Logger"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:PlotTabViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="550" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:CountToEnabledConverter x:Key="CountToEnabledConverter"/>
        </UserControl.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>                 <RowDefinition Height="Auto"/>              <RowDefinition Height="Auto"/>              </Grid.RowDefinitions>

        <oxy:PlotView x:Name="ChartControl" Model="{Binding PlotModel}" Grid.Row="0" Margin="0,0,0,5"/>

        <GroupBox Header="Geplotte Tags Statistieken" Grid.Row="1" Margin="0,0,0,5" Padding="5"
                  IsEnabled="{Binding PlottedSeriesInfos.Count, Converter={StaticResource CountToEnabledConverter}}"
                  BorderThickness="1" BorderBrush="#CCCCCC" Background="WhiteSmoke">
            <ListBox ItemsSource="{Binding PlottedSeriesInfos}" MaxHeight="180" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:PlottedSeriesDisplayInfo}">
                        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding SeriesKey}" VerticalAlignment="Center" Grid.Column="0" FontWeight="Bold" ToolTip="{Binding SeriesKey}" TextTrimming="CharacterEllipsis"/>
                                    <Button Content="Verwijder" Grid.Column="1" Margin="10,0,0,0" Padding="6,2" FontSize="10" Background="#FFF0F0" BorderBrush="#FFB0B0" Foreground="#CC0000"
                                            Command="{Binding DataContext.RemoveSeriesFromPlotCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                            CommandParameter="{Binding}"/> </Grid>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <CheckBox Content="Gem." IsChecked="{Binding ShowMeanLine, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <CheckBox Content="Max" IsChecked="{Binding ShowMaxLine, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <CheckBox Content="Min" IsChecked="{Binding ShowMinLine, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <Border Grid.Row="2" Background="#F0F0F0" Padding="8" CornerRadius="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Command="{Binding ZoomFitCommand}" Content="Zoom Passend" MinWidth="100" Margin="0,0,5,0" Padding="5"/>
                <Button Command="{Binding ExportSvgCommand}" Content="Exporteer SVG" MinWidth="120" Margin="0,0,5,0" Padding="5"/>
                <Button Command="{Binding AddAnnotationCommand}" Content="Voeg Annotatie Toe" MinWidth="150" Margin="0,0,0,0" Padding="5"
                        ToolTip="Klik om een voorbeeldannotatie toe te voegen"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>